{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "max-len": [1, 120, 4],
        "indent": [1, 4],
        "require-jsdoc" : 0,
        "no-invalid-this": 0,
        "linebreak-style": 0
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
